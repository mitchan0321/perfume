#########################################
##
## Do: % perfumesh pmacs.files
##
defun wc (file) {
    i := 0;
    f := `File($file mode: i);
    $f each do: {$i ++};
    $f close;
    return $i;
};

sum := 0;
$pmacs.files each do: {| f |
    l ::= wc ["" . $f];
    $sum ++ $l;
    println ["%5d: %v" fmt $l $f];
};
println ["%5d: (Total)" fmt $sum];
