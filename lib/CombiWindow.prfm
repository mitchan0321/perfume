CombiWindow method get-key-bindings (command) {
    result := ();
    map ::= get-bind-map DEFAULT;
    $map each do: {| k v |
        if {nil? $v} {continue};
        if {$command = $v} {
            $result <<- ["" . $k];
        };
    };
    maps ::= get-prefix-list;
    $maps each do: {| name |
        prefix ::= get-prefix-key $name;
        map ::= get-bind-map $name;
        $map ?? {continue};
        $map each do: {| k v |
            if {nil? $v} {continue};
            if {$command = $v} {
                $result <<- [$prefix . ["" . $k]];
            };
        };
    };
    return $result;
};

