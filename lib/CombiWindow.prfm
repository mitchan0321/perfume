    (y x) := $geom,Region;
    if {[$buff get-buffer-length] < $y} {y ::= $buff get-buffer-length};
    src ::= $buff get-buffer-line $y;
    if $src {
	if {[$src len] < $x} {x ::= $src len};
    } {
