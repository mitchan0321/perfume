    buff ::= get-buffer;
    ret ::= $buff cut-region $sy $sx $ey $ex;
    setvar CopyBuffer [$ret get 0];
    result ::= $ret get 1;
    if $result,0 {
	return ($result,2 $result,3);
    };
    return (0 0);
};

CombiWindow method delete-region (sy sx ey ex) {
    if {$sy > $ey} {
        (sy ey) := ($ey $sy);
        (sx ex) := ($ex $sx);
    } {
        if {$sx > $ex} {
            (sx ex) := ($ex $sx);
        };
    };
    buff ::= get-buffer;
    ret ::= $buff cut-region $sy $sx $ey $ex;
    result ::= $ret get 1;
    if $result,0 {
	return ($result,2 $result,3);
    };
    return (0 0);
};

