# grep
load-func standard-io-command-templ;

defun grep (pat
	    native-value: nv
	    args: files) {

    standard-io-command-templ
	native-value: nil
	files: $files
	driver: [fun (file file-name native-value) {
	    grep-sub $file $file-name $pat;
	}];
};

defun grep-sub (file name pat) {
    set n 1;
    set i 0;
    $file each do: {| r |
        if {$r =~ $pat} then: {
	    println $name ":" $n ": " $r;
	    $i ++;
	};
	$n ++;
    };

    return $i;
};
