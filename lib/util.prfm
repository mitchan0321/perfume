#
# apply constructor delegate chain
# Using: xx method () init {apply-constructor}
#
defun apply-constructor () {
    [[self] delegate?] each do: {| i |
	apply-constructor-sub $i;
    };
};

defun apply-constructor-sub (o) {
    set s [symbol ["__init__" . $o]];
    if [sets? $s] then: {return};
    sets $s t;

    set l [$o delegate?];
    if {$l null?} then: {return};

    $l each do: {| i |
	apply-constructor-sub $i;
	try {
	    [$i var? init];
	}
        catch: {};
    };
};

#
# block eval and input/output redirect from/to specified file.
#
Block method >> (file) {
    try {
        set orig_stdout $stdout;
        setvar stdout [new File];
        $stdout open $file mode: o;
	[self] eval;
    }
    catch: {| e |
        throw $e;
    }
    fin: {
        try {$stdout close;} catch: {};
        setvar stdout $orig_stdout;
    };
};

Block method << (file) {
    try {
        set orig_stdin $stdin;
        setvar stdin [new File];
        $stdin open $file mode: i;
	[self] eval;
    }
    catch: {| e |
        throw $e;
    }
    fin: {
        try {$stdin close;} catch: {};
        setvar stdin $orig_stdin;
    };
};

#
# List utility
#
List method clone () {
    set result ();
    [self] each do: {| l |
	$result + $l;
    };
    return $result;
};

List method insert! (pos obj) {
    [seek $pos] << $obj;
    return [self];
};

List method delete! (pos) {
    if [$pos >= [[len] - 1]]
    then: {->>}
    else: {[seek $pos] >>};
    return [self];
};

List method insert (pos obj) {
    set result [[self] clone];
    [$result seek $pos] << $obj;
    return $result;
};

List method delete (pos) {
    set result [[self] clone];
    if [$pos >= [[len] - 1]]
    then: {$result ->>}
    else: {[$result seek $pos] >>};
    return $result;
};

List method find (obj) {
    set i 0;
    [self] each do: {| f |
	if [eq? $f $obj] then: {return $i};
	$i ++;
    };
    return nil;
};

List method find* (obj) {
    set i 0;
    set result ();
    [self] each do: {| f |
	if [eq? $f $obj] then: {$result + $i};
	set i [$i + 1];
    };
    return $result;
};

List method reverse () {
    set a [vector [self]];
    set result ();
    set r $result;
    
    if [[$a len] = 0] then: {return $result};

    [[$a len] - 1] .. 0 : each do: {| i |
        set r [$r + $a,$i];
    };

    return $result;
};

