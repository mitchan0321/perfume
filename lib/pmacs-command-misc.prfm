defcommand para-alphabet desc: "Demo background." {
    | main window |

    f ::= fun (l) {
        if [$l null?] else: {
            c ::= $l >>;
            show-message $c;
            $main add-background {
                $f $l;
                result ALL;
            } after: 100;
        };
    };
    $f ["abcdefghijklmnopqrstuvwxyz" split sep: ""];
    result ALL;
};

