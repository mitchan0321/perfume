    $buff append-string "";
    $buff append-string ["%1v %1v%1v%1v%1v %-32w %6v %-6v %-w" fmt "#" "p" "m" "n" "d" "Buffer name" "Length" "Mode" "Content path"];
    $buff append-string ["%1v %1v%1v%1v%1v %-32w %6v %-6v %-w" fmt "-" "-" "-" "-" "-" "-----------" "------" "----" "------------"];
    ### l ::= BufferManager get-buffer-list;
    l ::= BufferManager get-buffer-list-order-by-newer;
