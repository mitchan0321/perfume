    geom ::= $window get-geom;
    if [$window get-region] {
        (sy sx) ::= $window end-region;
        (ey ex) ::= $window get-source-index $buff $geom;
        (line col) ::= $window delete-region $sy $sx $ey $ex;
    };
    (sy sx) ::= $window get-source-index $buff $geom;
